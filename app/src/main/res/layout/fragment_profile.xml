<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f9f9f9">

    <!-- Profile Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- User Picture -->
        <ImageView
            android:id="@+id/user_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="User Picture"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_marginEnd="16dp" />

        <!-- User Name and Role -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jack Adams"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Designer"
                android:textSize="14sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los Angeles, California, USA"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="16dp" />

    <!-- Personal Information -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: jack.adams@gmail.com"
        android:textSize="14sp"
        android:textColor="#333"
        android:padding="4dp" />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: (213) 555-1234"
        android:textSize="14sp"
        android:textColor="#333"
        android:padding="4dp" />

    <!-- Medical Information -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Information"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/user_blood_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Type: O+"
        android:textSize="14sp"
        android:textColor="#333"
        android:padding="4dp" />

    <TextView
        android:id="@+id/user_chronic_illness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chronic Illness: None"
        android:textSize="14sp"
        android:textColor="#333"
        android:padding="4dp" />

    <TextView
        android:id="@+id/user_allergies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allergies: None"
        android:textSize="14sp"
        android:textColor="#333"
        android:padding="4dp" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit"
        android:backgroundTint="#6200EE"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="24dp" />
</LinearLayout>




