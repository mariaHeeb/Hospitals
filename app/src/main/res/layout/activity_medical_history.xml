<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical History"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Treatment Section -->
    <TextView
        android:id="@+id/treatmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treatment:"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/treatmentInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter treatment details"
        android:padding="16dp"
        android:background="@drawable/rounded_input_field"
        app:layout_constraintTop_toBottomOf="@id/treatmentLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Illnesses Section -->
    <TextView
        android:id="@+id/illnessesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Illnesses:"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/treatmentInput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/illnessesInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter illnesses details"
        android:padding="16dp"
        android:background="@drawable/rounded_input_field"
        app:layout_constraintTop_toBottomOf="@id/illnessesLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Allergies Section -->
    <TextView
        android:id="@+id/allergiesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allergies:"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/illnessesInput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/allergiesInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter allergies details"
        android:padding="16dp"
        android:background="@drawable/rounded_input_field"
        app:layout_constraintTop_toBottomOf="@id/allergiesLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/allergiesInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
