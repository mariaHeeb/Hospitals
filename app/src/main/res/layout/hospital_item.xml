<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/hospital_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rambam Health Care Campus"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/hospital_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It is the largest medical center in northern Israel and fifth largest in Israel"
            android:textSize="16sp"
            android:textColor="#4B5563"
            android:layout_marginBottom="18dp" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Hospital Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/hospital_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_rambam"
                android:contentDescription="Hospital Image"
                android:scaleType="centerCrop"
                android:layout_marginEnd="20dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent" />

            <!-- Text and Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/hospital_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address : HaAliya HaShniya St 8, Haifa, 3109601"
                    android:textSize="15sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="14dp" />

                <Button
                    android:id="@+id/learn_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show appointments"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#10B981"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:elevation="8dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>



